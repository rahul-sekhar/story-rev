<%= simple_form_for [:admin, @order], :defaults => { :required => false, :error => false } do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :pin_code %>
  <%= f.input :other_info %>
  <%= f.input :delivery_method,
    :collection => { "Speed Post" => 1, "Pickup Point" => 2},
    :include_blank => false,
    :label_html => { :class => "multi-line" }
  %>
  <%= f.input :payment_method_id,
    :collection => { "Bank Transfer" => 1, "Cheque" => 2, "Cash" => 3 },
    :include_blank => false,
    :label_html => { :class => "multi-line" }
  %>
  <%= f.submit "Save", :class => "submit" %>
<% end %>