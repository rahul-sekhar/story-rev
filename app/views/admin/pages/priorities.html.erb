<% content_for :top_nav do %>
  <li>
    <%= link_to "Collections", admin_collections_path %>
  </li>
  
  <% if admin? %>
    <li>
      <%= link_to "Passwords", admin_roles_path %>
    </li>
  <% end %>
  
  <li class="current">
    <%= link_to "Priorites", admin_priorities_path %>
  </li>

  <li>
    <%= link_to "Default Cost Prices", admin_default_cost_prices_path %>
  </li>
<% end %>

<div class="column">
  <h2>Collections</h2>
  <ul class="collections">
    <% @collections.each do |x| %>
      <li data-id="<%= x.id %>" data-name="<%= x.name %>" data-priority="<%= x.priority %>">
        <%= x.priority %> - <%= x.name %> <%= link_to "[change]", "#", :class => "change-link" %>
      </li>
    <% end %>
  </ul>
  
  <h2>Categories</h2>
  <ul class="book_types">
