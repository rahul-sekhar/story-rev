        <%= x.priority %> - <%= x.name %>  <%= link_to "[change]", "#", :class => "change-link" %>
      </li>
    <% end %>
  </ul>
  
  <h2>Illustrators</h2>
  <ul class="illustrators">
    <% @illustrators.each do |x| %>
