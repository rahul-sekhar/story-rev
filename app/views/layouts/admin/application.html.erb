<!DOCTYPE html>
<html>
<head>
  <title>Story Revolution Administration<%= @title.present? ? " - #{@title}" : "" %></title>
  <%= yield :pre_head %>
  <%= stylesheet_link_tag    "admin/admin" %>
  <%= javascript_include_tag "admin/admin" %>
  <%= csrf_meta_tags %>
</head>
<body class="admin <%= @class %>">
  
  <div id="wrapper">
  
  <% if admin_role %>
  
    <nav id="side-nav">
      <ul>
        <li><%= link_to "Books", search_admin_books_path %></li>
        <li><%= link_to "Orders", pending_admin_orders_path %></li>
        <li><%= link_to "Others", admin_collections_path %></li>
        <% if admin? %>
          <li><%= link_to "Finances", summarised_admin_transactions_path %></li>
        <% end %>
        <li><%= link_to "Logout", admin_logout_path %></li>
      </ul>
    </nav>
  
  <% end %>
    
    <div id="content">
      <ul id="top-nav">
        <%= yield :top_nav %>
      </ul>
      
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="error"><%= alert %></p>
      <% end %>
      
      <%= yield %>
      
    </div>
  
  </div>
</body>
</html>
