<!DOCTYPE html>
<html>
<head>
  <title>StoryRev</title>
  <%= stylesheet_link_tag    "admin/admin" %>
  <%= javascript_include_tag "admin/admin" %>
  <%= csrf_meta_tags %>
</head>
<body<%=raw @class ? " class=\"#{@class}\"" : nil %>>

<% if admin_role %>
  
  <nav id="side-nav">
    <ul>
      <li><%= link_to "Books", admin_products_path %></li>
      <li><%= link_to "Orders", "#" %></li>
      <li><%= link_to "Customers", "#" %></li>
      <li><%= link_to "Finances", "#" %></li>
      <li><%= link_to "Blog", "#" %></li>
      <li><%= link_to "Others", "#" %></li>
      <li><%= link_to "Logout", admin_logout_path %></li>
    </ul>
  </nav>

<% end %>
  
  <div id="content">
    <ul class="top-nav">
      <%= yield :top_nav %>
    </ul>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
